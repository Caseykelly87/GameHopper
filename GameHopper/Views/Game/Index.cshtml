@using GameHopper.Models;
@model IEnumerable<Game>

@{
    ViewData["Title"] = "My Game Listings";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Game Picture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Title</td>
                <td>@game.Description</td>
                <td>
                    @if (game.GamePicture != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(game.GamePicture)" alt="Game Picture" style="max-width: 100px;" />
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@game.Id" class="btn btn-info">View Details</a>
                    @if (User.Identity.IsAuthenticated && game.GameMasterId == User.Identity.Name)
                    {
                        <a asp-action="EditGame" asp-route-id="@game.Id" class="btn btn-primary">Edit</a>
                        <form asp-action="DeleteGame" asp-route-id="@game.Id" method="post" style="display: inline-block;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this game?')">Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>