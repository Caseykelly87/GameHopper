@using GameHopper.Models
@model IEnumerable<Game>

@{
    ViewData["Title"] = "My Game Listings";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Game Picture</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Title</td>
                <td>@game.Description</td>
                <td>
                    @if (game.GamePicture != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(game.GamePicture)" alt="Game Picture" style="max-width: 100px;" />
                    }
                </td>
                <td>
                    <a asp-action="GameDetails" asp-route-id="@game.Id" class="btn btn-info">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>