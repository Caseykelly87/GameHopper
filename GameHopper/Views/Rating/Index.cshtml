@using GameHopper.Models;
@model List<GameHopper.Models.Rating>

@{
    ViewData["Title"] = "Rating";
    }


    <h1>All Ratings</h1>

    <table class="table">
        <tr>
            <th>Id
            <th>StarRating</th>
        </tr>
        @foreach (Rating rating in @Model)
        {
            <tr>
                <td>@rating.Id</td>
                <td><a asp-controller="Rating" asp-action="Detail" asp-route-id="@rating.Id">@rating.StarRating</a></td>
            </tr>
        }
    </table>