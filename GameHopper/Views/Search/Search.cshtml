@using GameHopper.ViewModels
@model GameHopper.SearchViewModel
@{
    ViewData["Title"] = "Search Games";
}

<h1>Search Games</h1>

<form asp-controller="Search" asp-action="Search" method="POST">
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
    </div>
    <div class="form-group">
        <label asp-for="TagIds" class="control-label">Tags</label>
        <select asp-for="TagIds" class="form-control" asp-items="ViewBag.Tags" multiple="multiple"></select>
    </div>
    <div class="form-group">
        <label asp-for="SearchTerm" class="control-label">Search Term</label>
        <input asp-for="SearchTerm" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
