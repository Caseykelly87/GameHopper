@using GameHopper.Models;
@model GameHopper.ViewModels.AddCategoryViewModel
@{
    ViewData["Title"] = "Create Category";
    }

<link href="~/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="~/js/froala_editor.pkgd.min.js"></script>

 <h5 class="mb-4">Create New Category</h5>

<div>

<form asp-controller="Category" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="CategoryName">Category: </label>
        <input asp-for="CategoryName" />
        <span asp-validation-for="CategoryName"></span>
    </div>

    <br />

    <input type="submit" value="Add new category" />

</form>
